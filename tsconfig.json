{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "react-jsxdev",
    "module": "ESNext",
    "noEmit": true,
    "moduleResolution": "Node",
    "paths": {
      "$/*": ["src/*"]
    },    
    "skipLibCheck": true,
    "target": "ESNext",
  },
  "include": [
    "pages",
    "src"
  ],
  "exclude": [
    "_dist",
    "node_modules"
  ]
}
