{
  "name": "akatov.github.io",
  "version": "1.0.0",
  "description": "Dmitri's Blog",
  "scripts": {
    "build": "npm run css:build && npm run 11ty:build",
    "11ty:build": "npx @11ty/eleventy",
    "11ty:dev": "npx @11ty/eleventy --serve --incremental",
    "css:build": "postcss --output _dist/assets/index.css src/assets/index.css",
    "css:dev": "postcss --watch --output _dist/assets/index.css src/assets/index.css",
    "test:run": "vitest run",
    "test:dev": "vitest watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akatov/akatov.github.io.git"
  },
  "author": "Dmitri Akatov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/akatov/akatov.github.io/issues"
  },
  "homepage": "https://github.com/akatov/akatov.github.io#readme",
  "type": "module",
  "devDependencies": {
    "@11ty/eleventy": "3.0.0-alpha.20",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-bundle": "^2.0.2",
    "@11ty/eleventy-plugin-rss": "^2.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@jamshop/eleventy-plugin-mdx": "^0.0.17",
    "@mdx-js/node-loader": "^3.0.1",
    "@testing-library/dom": "^10.4.0",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.25",
    "autoprefixer": "10.4.16",
    "happy-dom": "^15.7.4",
    "jsx-async-runtime": "^0.5.1",
    "luxon": "^3.5.0",
    "markdown-it-attrs": "^4.2.0",
    "postcss": "8.4.31",
    "postcss-cli": "10.1.0",
    "postcss-import": "^15.1.0",
    "prismjs": "^1.29.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tailwindcss": "3.3.3",
    "tsx": "4.19.1",
    "vitest": "^2.1.1"
  }
}
